<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_degrade"
    tools:context=".controle.CadastroProfessor">


  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/fotoCadastroProfessor"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_marginTop="52dp"
      android:src="@drawable/perfil"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/nomeCadastroProfessor"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="64dp"
      android:layout_marginLeft="64dp"
      android:layout_marginTop="56dp"
      android:layout_marginEnd="64dp"
      android:layout_marginRight="64dp"
      android:background="@drawable/bg_edittext"
      android:ems="10"
      android:hint="Nome"
      android:textColor="#C8C7C7"
      android:textColorHint="#C8C7C7"
      android:inputType="textPersonName"
      android:paddingLeft="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/fotoCadastroProfessor" />

  <EditText
      android:id="@+id/emailCadastroProfessor"
      android:layout_width="0dp"
      android:layout_height="24dp"
      android:layout_marginStart="64dp"
      android:layout_marginLeft="64dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="64dp"
      android:layout_marginRight="64dp"
      android:background="@drawable/bg_edittext"
      android:ems="10"
      android:hint="Email"
      android:inputType="textEmailAddress"
      android:paddingLeft="8dp"
      android:textColor="#C8C7C7"
      android:textColorHint="#C8C7C7"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/nomeCadastroProfessor" />

  <EditText
      android:id="@+id/enderecoCadastroProfessor"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="64dp"
      android:layout_marginLeft="64dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="64dp"
      android:layout_marginRight="64dp"
      android:background="@drawable/bg_edittext"
      android:ems="10"
      android:hint="EndereÃ§o"
      android:inputType="textPersonName"
      android:paddingLeft="8dp"
      android:textColor="#C8C7C7"
      android:textColorHint="#C8C7C7"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/emailCadastroProfessor"></EditText>

  <EditText
      android:id="@+id/senhaCadastroProfessor"
      android:layout_width="0dp"
      android:layout_height="24dp"
      android:layout_marginStart="64dp"
      android:layout_marginLeft="64dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="64dp"
      android:layout_marginRight="64dp"
      android:background="@drawable/bg_edittext"
      android:ems="10"
      android:hint="Senha"
      android:inputType="textPassword"
      android:paddingLeft="8dp"
      android:textColor="#C8C7C7"
      android:textColorHint="#C8C7C7"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/enderecoCadastroProfessor" />

  <Button
      android:id="@+id/buttonCadastroProfessor"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_marginStart="64dp"
      android:layout_marginLeft="64dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="64dp"
      android:layout_marginRight="64dp"
      android:background="@drawable/bg_button"
      android:text="Cadastrar"
      android:textColor="#C8C7C7"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/senhaCadastroProfessor" />

  <ProgressBar
      android:id="@+id/progressBarCadastroProfessor"
      style="?android:attr/progressBarStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:layout_marginBottom="192dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/buttonCadastroProfessor"
      app:layout_constraintVertical_bias="0.244" />

</androidx.constraintlayout.widget.ConstraintLayout>